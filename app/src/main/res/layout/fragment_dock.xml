<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded">

    <data>

        <import type="cn.cctech.kccommand.utils.DockUtilsKt" />

        <variable
            name="expedition1"
            type="cn.cctech.kancolle.oyodo.entities.Expedition" />

        <variable
            name="expedition2"
            type="cn.cctech.kancolle.oyodo.entities.Expedition" />

        <variable
            name="expedition3"
            type="cn.cctech.kancolle.oyodo.entities.Expedition" />

        <variable
            name="repair1"
            type="cn.cctech.kancolle.oyodo.entities.Repair" />

        <variable
            name="repair2"
            type="cn.cctech.kancolle.oyodo.entities.Repair" />

        <variable
            name="repair3"
            type="cn.cctech.kancolle.oyodo.entities.Repair" />

        <variable
            name="repair4"
            type="cn.cctech.kancolle.oyodo.entities.Repair" />

        <variable
            name="build1"
            type="cn.cctech.kancolle.oyodo.entities.Build" />

        <variable
            name="build2"
            type="cn.cctech.kancolle.oyodo.entities.Build" />

        <variable
            name="build3"
            type="cn.cctech.kancolle.oyodo.entities.Build" />

        <variable
            name="build4"
            type="cn.cctech.kancolle.oyodo.entities.Build" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/ll_dock_block_expedition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/dock_block_border"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getExpeditionTitle(context, expedition1)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getExpeditionTime(context, expedition1)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getExpeditionTitle(context, expedition2)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getExpeditionTime(context, expedition2)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getExpeditionTitle(context, expedition3)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getExpeditionTime(context, expedition3)}" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ll_dock_block_expedition"
                android:layout_marginLeft="8dp"
                android:background="@color/defaultBackground"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/dock_expedition_panel_title"
                android:textColor="@color/defaultSecondaryTextColor" />

            <LinearLayout
                android:id="@+id/ll_dock_block_repair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_dock_block_expedition"
                android:layout_margin="8dp"
                android:background="@drawable/dock_block_border"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getRepairTitle(context, repair1)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getRepairTime(context, repair1)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getRepairTitle(context, repair2)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getRepairTime(context, repair2)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getRepairTitle(context, repair3)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getRepairTime(context, repair3)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getRepairTitle(context, repair4)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getRepairTime(context, repair4)}" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ll_dock_block_repair"
                android:layout_below="@id/ll_dock_block_expedition"
                android:layout_marginLeft="8dp"
                android:background="@color/defaultBackground"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/dock_repair_panel_title"
                android:textColor="@color/defaultSecondaryTextColor" />

            <LinearLayout
                android:id="@+id/ll_dock_block_build"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_dock_block_repair"
                android:layout_margin="8dp"
                android:background="@drawable/dock_block_border"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getBuildTitle(context, build1)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getBuildTime(context, build1)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getBuildTitle(context, build2)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getBuildTime(context, build2)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getBuildTitle(context, build3)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getBuildTime(context, build3)}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@{DockUtilsKt.getBuildTitle(context, build4)}" />

                    <TextView
                        style="@style/DockItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text="@{DockUtilsKt.getBuildTime(context, build4)}" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ll_dock_block_build"
                android:layout_below="@id/ll_dock_block_repair"
                android:layout_marginLeft="8dp"
                android:background="@color/defaultBackground"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/dock_build_panel_title"
                android:textColor="@color/defaultSecondaryTextColor" />
        </RelativeLayout>
    </ScrollView>
</layout>